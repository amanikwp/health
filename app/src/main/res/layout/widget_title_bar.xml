<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/title_bar_normal_bg"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/layout_left"
        style="@style/normal_icon_click_bg_style">

        <ImageView
            android:id="@+id/img_left"
            style="@style/normal_icon_back_style"
            android:src="@drawable/icon_title_back" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        style="@style/normal_text_style"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="@dimen/text_size_medium" />

    <ImageView
        android:id="@+id/img_right"
        style="@style/normal_icon_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_right"
        style="@style/normal_text_style"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/text_margin_normal"
        android:paddingRight="@dimen/text_margin_normal"
        android:textSize="@dimen/text_size_medium"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />

</RelativeLayout>